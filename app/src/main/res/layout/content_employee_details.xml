<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeScreen"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@color/grey_100"
    tools:showIn="@layout/employee_fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="3dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:typeface="monospace"
                    android:drawablePadding="5dp"
                    android:layout_gravity="center"
                    android:text="Academic Information"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/grey_500"
                    android:layout_marginTop="3dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textStyle="bold"
                            android:typeface="serif"
                            android:padding="3dp"
                            android:text="Emp ID : "/>

                        <EditText
                            android:id="@+id/etEmpId"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorPrimary"
                            android:focusableInTouchMode="false"
                            android:background="@drawable/square_corner_trans_edittext"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                    </LinearLayout>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textStyle="bold"
                            android:typeface="serif"
                            android:padding="3dp"
                            android:text="Designation : "/>

                        <EditText
                            android:id="@+id/etDesignation"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorPrimary"
                            android:focusableInTouchMode="false"
                            android:background="@drawable/square_corner_trans_edittext"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                           />

                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textStyle="bold"
                            android:typeface="serif"
                            android:padding="3dp"
                            android:text="Qualification : "/>

                        <EditText
                            android:id="@+id/etQualification"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorPrimary"
                            android:focusableInTouchMode="false"
                            android:background="@drawable/square_corner_trans_edittext"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textStyle="bold"
                            android:typeface="serif"
                            android:padding="3dp"
                            android:text="Experience : "/>

                        <EditText
                            android:id="@+id/etExp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorPrimary"
                            android:focusableInTouchMode="false"
                            android:background="@drawable/square_corner_trans_edittext"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textStyle="bold"
                            android:typeface="serif"
                            android:padding="3dp"
                            android:text="Biometric Emp ID : "/>

                        <EditText
                            android:id="@+id/etBempid"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorPrimary"
                            android:focusableInTouchMode="false"
                            android:background="@drawable/square_corner_trans_edittext"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:typeface="monospace"
                    android:drawablePadding="5dp"
                    android:layout_gravity="center"
                    android:text="Personal Information"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/grey_500"
                    android:layout_marginTop="3dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textStyle="bold"
                            android:typeface="serif"
                            android:padding="3dp"
                            android:text="Name : "/>

                        <EditText
                            android:id="@+id/etName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorPrimary"
                            android:focusableInTouchMode="false"
                            android:background="@drawable/square_corner_trans_edittext"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:typeface="serif"
                            android:textStyle="bold"
                            android:padding="3dp"
                            android:text="Gender : "/>

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:background="@drawable/square_corner_trans_edittext"
                            >

                            <RadioButton
                                android:id="@+id/rbMale"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorPrimary"
                                android:text="Male"/>

                            <RadioButton
                                android:id="@+id/rbFemale"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorPrimary"
                                android:text="Female"/>

                        </RadioGroup>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:typeface="serif"
                            android:textStyle="bold"
                            android:padding="3dp"
                            android:text="Blood Group : "/>

                        <EditText
                            android:id="@+id/etBloodGrp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorPrimary"
                            android:focusableInTouchMode="false"
                            android:background="@drawable/square_corner_trans_edittext"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:typeface="serif"
                            android:textStyle="bold"
                            android:padding="3dp"
                            android:text="Date of Birth : "/>

                        <EditText
                            android:id="@+id/etDob"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorPrimary"
                            android:focusableInTouchMode="false"
                            android:background="@drawable/square_corner_trans_edittext"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:typeface="serif"
                            android:textStyle="bold"
                            android:padding="3dp"
                            android:text="Date of Joining : "/>

                        <EditText
                            android:id="@+id/etDoj"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorPrimary"
                            android:focusableInTouchMode="false"
                            android:background="@drawable/square_corner_trans_edittext"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:typeface="serif"
                            android:textStyle="bold"
                            android:padding="3dp"
                            android:text="Religion : "/>

                        <EditText
                            android:id="@+id/etReligion"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorPrimary"
                            android:focusableInTouchMode="false"
                            android:background="@drawable/square_corner_trans_edittext"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:typeface="serif"
                            android:textStyle="bold"
                            android:padding="3dp"
                            android:text="Emergency Number : "/>

                        <EditText
                            android:id="@+id/etEmerNo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorPrimary"
                            android:focusableInTouchMode="false"
                            android:inputType="number"
                            android:maxLength="10"
                            android:background="@drawable/square_corner_trans_edittext"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>

                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:typeface="serif"
                            android:textStyle="bold"
                            android:padding="3dp"
                            android:text="Father's Name : "/>

                        <EditText
                            android:id="@+id/etFatherName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorPrimary"
                            android:focusableInTouchMode="false"
                            android:background="@drawable/square_corner_trans_edittext"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:typeface="serif"
                            android:textStyle="bold"
                            android:padding="3dp"
                            android:text="Middle Name : "/>

                        <EditText
                            android:id="@+id/etMiddleName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorPrimary"
                            android:background="@drawable/square_corner_trans_edittext"
                            android:focusableInTouchMode="false"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:typeface="monospace"
                    android:drawablePadding="5dp"
                    android:layout_gravity="center"
                    android:text="Contact Details :"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/grey_500"
                    android:layout_marginTop="3dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:typeface="serif"
                            android:textStyle="bold"
                            android:padding="3dp"
                            android:text="Email : "/>

                        <EditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorPrimary"
                            android:inputType="textEmailAddress"
                            android:background="@drawable/square_corner_trans_edittext"
                            android:focusableInTouchMode="false"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>

                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="match_parent"
                            android:typeface="serif"
                            android:textStyle="bold"
                            android:padding="3dp"
                            android:text="Address : "/>

                        <EditText
                            android:id="@+id/etAddr"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:gravity="center_vertical|top|left"
                            android:textColor="@color/colorPrimary"
                            android:background="@drawable/square_corner_trans_edittext"
                            android:focusableInTouchMode="false"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="match_parent"
                            android:typeface="serif"
                            android:textStyle="bold"
                            android:padding="3dp"
                            android:text="Permanent Address : "/>

                        <EditText
                            android:id="@+id/etPerAddr"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:gravity="center_vertical|top|left"
                            android:textColor="@color/colorPrimary"
                            android:background="@drawable/square_corner_trans_edittext"
                            android:focusableInTouchMode="false"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:typeface="serif"
                            android:textStyle="bold"
                            android:padding="3dp"
                            android:text="Phone : "/>

                        <EditText
                            android:id="@+id/etPhone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorPrimary"
                            android:focusableInTouchMode="false"
                            android:inputType="number"
                            android:background="@drawable/square_corner_trans_edittext"

                            android:maxLength="10"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:typeface="serif"
                            android:textStyle="bold"
                            android:padding="3dp"
                            android:text="User ID : "/>

                        <EditText
                            android:id="@+id/etUserid"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorPrimary"
                            android:focusableInTouchMode="false"
                            android:inputType="number"
                            android:background="@drawable/square_corner_trans_edittext"
                            android:maxLength="10"
                            android:textAppearance="?android:attr/textAppearanceSmall"/>

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>